{
  "name": "markpress",
  "description": "A tool to generate impress.js presentations from markdown files",
  "version": "4.0.0",
  "author": "Joan Gamell <http://gamell.io>",
  "bugs": "https://github.com/gamell/markpress/issues",
  "preferGlobal": true,
  "dependencies": {
    "co": "^4.6.0",
